// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    },
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-e ctrl-s": "editor::SortLinesCaseInsensitive",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-1": ["workspace::ActivatePane", 0],
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-2": ["workspace::ActivatePane", 1],
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-3": ["workspace::ActivatePane", 2],
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-4": ["workspace::ActivatePane", 3],
    },
  },
  {
    "bindings": {
      "ctrl-!": "editor::ToggleFocus",
    },
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "enter": null,
    },
  },
  {
    "context": "(ProjectPanel && not_editing)",
    "bindings": {
      "enter": "project_panel::Open",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-`": "workspace::ToggleLeftDock",
    },
  },
  {
    "bindings": {
      "ctrl-alt-z": "terminal_panel::Toggle",
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-alt-[": [
        "workspace::DecreaseActiveDockSize",
        {
          "px": 0,
        },
      ],
    },
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-alt-]": [
        "workspace::IncreaseActiveDockSize",
        {
          "px": 0
        }
      ]
    }
  },
  {
    "bindings": {
      "f4": null
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "f5": null
    }
  },
  {
    "bindings": {
      "ctrl-alt-shift-pageup": "workspace::MovePaneLeft"
    }
  },
  {
    "bindings": {
      "ctrl-alt-shift-pagedown": "workspace::MovePaneRight"
    }
  }
]
