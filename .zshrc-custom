export EDITOR=vim

export LC_CTYPE="en_GB.UTF-8"
export LANG="en_GB.UTF-8"

PROGRAMMING_DIR=$HOME/programming

RIDER_BIN_DIR=$HOME/bin/rider-latest/bin
IDEA_BIN_DIR=$HOME/bin/idea-latest/bin
NODE_BIN_DIR=$HOME/bin/node-latest/bin
GRADLE_BIN_DIR=$HOME/bin/gradle-latest/bin

export GOROOT=$HOME/bin/go-latest
export GOBIN=$HOME/bin/gobin
export GOPATH=$PROGRAMMING_DIR/gopath

export PATH=$GOBIN:$GOROOT/bin:$NODE_BIN_DIR:$IDEA_BIN_DIR:$RIDER_BIN_DIR:$GRADLE_BIN_DIR:$PATH

# Frequent directories aliases
alias n="cd $PROGRAMMING_DIR/nest"
alias p="cd $PROGRAMMING_DIR"

# General aliases
alias dotfiles="git --git-dir=$HOME/.my-dotfiles --work-tree=$HOME"
alias gaip="git add -ip"

# Host aliases
